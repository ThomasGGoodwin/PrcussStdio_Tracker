<%= render 'shared_partials/style' %>

<%= form_with(model: rsvp) do |form| %>
  <% if rsvp.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rsvp.errors.count, "error") %> prohibited this rsvp from being saved:</h2>

      <ul>
        <% rsvp.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :user_id %>
  </div>

  <div class="field">
    <%= form.hidden_field :event_id %>
  </div>

  <div class="field">
    <%= form.hidden_field :rsvp_time %>
  </div>
  
  <div class="field">
    <%= form.label "Instruments" %>
    <%= form.collection_check_boxes :instrument_ids, Instrument.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :attending %>
    <%= form.check_box :attending %>
  </div>

  <div class="field">
    <%= form.label :reason %>
    <%= form.text_area :reason %>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-primary a-primary' %>
  </div>
<% end %>

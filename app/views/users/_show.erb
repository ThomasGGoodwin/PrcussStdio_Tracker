<%= render 'shared_partials/admin_nav' %>

<div class="jumbotron" style="background-color:white">
<p id="notice"><%= notice %></p>

<p>
  <strong>User ID:</strong>
  <%= @user.id %>
</p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Role:</strong>
  <%= Role.where(id: @user.role_id).last.role_description %>
</p>

<%= link_to 'Edit', edit_user_path(@user), class:"btn btn-secondary a-primary" %>

<div class="jumbotron" id="includedContent" style="background-color: gray">
<p id="notice"><%= notice %></p>

<h1 class="white">Events</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th class="white">Event type</th>
      <th class="white">Name</th>
      <th class="white">Start time</th>
      <th class="white">End time</th>
      <th class="white">Location</th>
      <th class="white">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.event_type %></td>
        <td><%= event.name %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event, class:"a-CRUD" %></td>
        <td><%= link_to 'Edit', edit_event_path(event), class:"a-CRUD" %></td>
        <td><%= link_to 'Destroy', event, class:"a-CRUD", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Event', new_event_path, class:"btn btn-primary a-primary" %>

<br><br>

<div class="jumbotron jumbotron-fluid" style="background-color=white">
<%= month_calendar(attribute: :start_time, events: @events) do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <div>
      <%= event.name %>
    </div>
  <% end %>
<% end %>
</div>


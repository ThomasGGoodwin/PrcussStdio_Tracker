<p id="notice"><%= notice %></p>

<h1>Storage Keys</h1>

<table>
  <thead>
    <tr>
      <th>Storage key ID</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @storage_keys.each do |storage_key| %>
      <tr>
        <td><%= storage_key.id %></td>
        <td><%= first_and_last_show(storage_key.user_id) %></td>
        <td><%= link_to 'Show', storage_key %></td>
        <% if session[:user_role] == 'Admin' || session[:current_user_id] == storage_key.user_id.to_i %>
          <td><%= link_to 'Edit', edit_storage_key_path(storage_key) %></td>
        <% end %>
        <% if session[:user_role] == 'Admin' %>
          <td><%= link_to 'Destroy', storage_key, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if session[:user_role] == 'Admin' %>
  <%= link_to 'New Storage Key', new_storage_key_path %>
<% end %>
<br>
<%= link_to 'Back', root_url %>

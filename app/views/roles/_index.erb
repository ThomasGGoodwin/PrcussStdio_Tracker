<%= render 'shared_partials/admin_nav'%>

<p id="notice"><%= notice %></p>

<div class="jumbotron" style="background-color:white">
<h1>Roles</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Role ID</th>
      <th>Role description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.id %></td>
        <td><%= role.role_description %></td>
        <td><%= link_to 'Show', role , class:"a-CRUD" %></td>
        <td><%= link_to 'Edit', edit_role_path(role), class:"a-CRUD" %></td>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' }, class:"a-CRUD" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Role', new_role_path, class:"btn btn-primary a-primary" %>
<br> <br>
<%= link_to 'Back', root_url, class:"btn btn-secondary a-primary" %>
</div>
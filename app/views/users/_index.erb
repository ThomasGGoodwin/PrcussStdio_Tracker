<%= render 'shared_partials/admin_nav'%>

<div class="jumbotron" style="background-color:white">
<p id="notice"><%= notice %></p>

<h1>Users</h1>

<div class="class=table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>User ID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= Role.where(id: user.role_id).last.role_description %></td>
        <td><%= link_to 'Show', user, class:"a-CRUD" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:"a-CRUD" %></td>
        <td><%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure you want to remove ' + user.first_name + ' ' + user.last_name + ' from the organization?'}, class:"a-CRUD" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'Generate Attendance Report', attendance_report_path, class:"btn btn-primary a-primary" %>
<br>
<br>
<%= link_to 'New User', new_user_path, class:"btn btn-primary a-primary" %>
<br>
<br>
<%= link_to 'Back', root_url, class:"btn btn-secondary a-primary" %>
</div>
<p id="notice"><%= notice %></p>

<br>

<%= month_calendar(attribute: :start_time, events: @events) do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
    <div>
      <%= event.name %>
    </div>
  <% end %>
<% end %>

<br>

<h2>Upcoming Events</h2>

<table>
  <thead>
    <tr>
      <th>Event type</th>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @upcoming_events.each do |event| %>
      <tr>
        <td><%= EventType.where(id: event.event_type).limit(1).pluck(:description).first() %></td>
        <td><%= event.name %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= toggle_signup_button(current_admin.uid, event.id) %></td>
        <td><%= link_to 'Show', event %></td>
        <% if session[:user_role] == 'Admin' %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <td><%= link_to 'Invite Users', gig_master_url(event) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if session[:user_role] == 'Admin' %>
  <%= link_to 'New Event', new_event_path %>
<% end %>

<br><br>
<h2>Past Events</h2>

<table>
  <thead>
    <tr>
      <th>Event type</th>
      <th>Name</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @past_events.each do |event| %>
      <tr>
        <td><%= EventType.where(id: event.event_type).limit(1).pluck(:description).first() %></td>
        <td><%= event.name %></td>
        <td><%= event.start_time %></td>
        <td><%= event.end_time %></td>
        <td><%= event.location %></td>
        <td><%= event.description %></td>
        <td><%= link_to 'Show', event %></td>
        <% if session[:user_role] == 'Admin' %>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


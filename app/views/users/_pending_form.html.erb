<%= render 'shared_partials/style' %>

<%= form_with(model: user) do |form| %>
    <% if user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>
  
        <ul>
          <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, :value => current_admin.full_name.split.first %>
    </div>
  
    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, :value => current_admin.full_name.split.last %>
    </div>
  
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, :value => current_admin.email %>
    </div>

    <div class="field">
      <%= form.collection_select(:role_id, Role.where(role_description: 'Pending'), :id, :role_description) %>
    </div>  
  
    <div class="actions">
      <%= form.submit "Request", :class=>"btn btn-primary a-primary"%>
    </div>
  <% end %>
  